<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#383735"
        android:padding="16dp"
        tools:context="MainActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="40dp" />

    <EditText
        android:id="@+id/editTextGrossSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gross Salary"
        android:textColorHint="#cfc1a7"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="131dp" />

    <EditText
        android:id="@+id/editTextTax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextGrossSalary"
        android:hint="Tax"
        android:textColorHint="#cfc1a7"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="196dp" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTax"
        android:
        android:background="@color/blue"
        android:text="Calculate"
        android:textColor="@color/teal_700"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="392dp" />

    <TextView
        android:id="@+id/textViewNetSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonCalculate"
        android:text="Net Salary:"
        android:textColor="#cfc1a7"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="294dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WAGE CALCULATOR"
        android:textColor="#cfc1a7"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="57dp" />


</androidx.constraintlayout.widget.ConstraintLayout>